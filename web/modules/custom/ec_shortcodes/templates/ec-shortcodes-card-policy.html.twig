<div class="usa-accordion accordion card-policy">
{% set count = (count?? 0) + 1 %}

	<h3 class="usa-accordion__heading">
		<button class="usa-accordion__button" title="View {{ title }}" aria-expanded="false" aria-controls="accordion-{{ count }}">

			<span class="scroll">
				<svg class="usa-icon dg-icon dg-icon--large margin-bottom-05" aria-hidden="true" focusable="false">
					<use xlink:href="{{ drupal_url(theme_path ~ '/static/digitalgov/img/sprite.svg#unfold_more' ) }}"></use>
				</svg>
			</span>
			<span class="src">
				{% if kicker %}
					<strong class="kicker">{{ kicker }}</strong>
				{% endif %}
				{{ title }}
				{% if pdf %}
					<em>{{ pdf }}</em>
				{% endif %}
			</span>
		</button>
	</h3>

	{% if text %}
		<div id="accordion-{{ count }}" class="card-policy-body usa-accordion__content usa-prose">
			{% set text = {
        '#type':   'processed_text',
        '#text':    text.value,
        '#format':  text.format,
      } %}
			{{ text }}
			<a class="src" href="{{ url }}" title="View {{ title }}">
				View the full legislation
				<svg class="usa-icon dg-icon dg-icon--standard margin-bottom-05" aria-hidden="true" focusable="false">
					<use xlink:href="{{ drupal_url(theme_path ~ '/static/digitalgov/img/sprite.svg#arrow_forward' ) }}"></use>
				</svg>
			</a>
		</div>
	{% endif %}
</div>
