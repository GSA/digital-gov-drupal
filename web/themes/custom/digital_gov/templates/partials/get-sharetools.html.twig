{# Share tools #}

<!-- Test syntax -->
<section class="share-tools">
  <div class="grid-row">
    <div class="grid-col-4">
      <a
        class="twitter"
        aria-label="Share on Twitter"
        target="_blank"
        rel="noreferrer"
        href="http://twitter.com/share?url=https://digital.gov{{ share_path }}&amp;text={{ title }}"
      >
        <svg
          class="usa-icon dg-icon dg-icon--large margin-bottom-05"
          aria-hidden="true"
          focusable="false"
        >
          <use xlink:href="/{{ active_theme_path() }}/static/uswds/img/sprite.svg#x" ></use>
        </svg>
      </a>
    </div>
    <div class="grid-col-4">
      <a
        class="facebook"
        aria-label="Share on Facebook"
        target="_blank"
        rel="noreferrer"
        href="https://www.facebook.com/sharer/sharer.php?u=https://digital.gov{{ share_path }}"
      >
        <svg
          class="usa-icon dg-icon dg-icon--large margin-bottom-05"
          aria-hidden="true"
          focusable="false"
        >
          <use
            xlink:href="/{{ active_theme_path() }}/static/uswds/img/sprite.svg#facebook"
          ></use>
        </svg>
      </a>
    </div>
    <div class="grid-col-4">
      <a
        class="linkedin"
        aria-label="Share on LinkedIn"
        target="_blank"
        rel="noreferrer"
        href="https://www.linkedin.com/sharing/share-offsite/?url=https://digital.gov{{ share_path }}"
      >
        <svg
          class="usa-icon dg-icon dg-icon--large margin-bottom-05"
          aria-hidden="true"
          focusable="false"
        >
          <use
            xlink:href="/{{ active_theme_path() }}/static/uswds/img/sprite.svg#linkedin"
          ></use>
        </svg>
      </a>
    </div>
  </div>
  <div class="grid-row">
    <div class="grid-col-6">
      <a
        target="_blank"
        title="Email this page"
        class="email"
        href="mailto:?subject={{ mailto_subject|url_encode }}%20%7C%20Digital.gov&body=%20%20%0A-------%0A{{ title|url_encode }}%0Ahttps://digital.gov{{ share_path }}%3Fem%0A-------%0A%0A&#9829; Sign-up%20for%20the%20Digital.gov%20newsletter%3A%20https%3A%2F%2Fdigital.gov%2Fsubscribe%2F"
        data-proofer-ignore
      >
        <svg
          class="usa-icon dg-icon dg-icon--standard margin-bottom-05"
          aria-hidden="true"
          focusable="false"
        >
          <use xlink:href="/{{ active_theme_path() }}/static/uswds/img/sprite.svg#mail" ></use>
        </svg>
        Email</a
      >
    </div>
    <div class="grid-col-6">
      <a
        class="print"
        href="javascript:window.print()"
        onclick="window.print();return false;"
      >
        <svg
          class="usa-icon dg-icon dg-icon--standard margin-bottom-05"
          aria-hidden="true"
          focusable="false"
        >
          <use xlink:href="/{{ active_theme_path() }}/static/uswds/img/sprite.svg#print" ></use>
        </svg>
        Print
      </a>
    </div>
  </div>
</section>
