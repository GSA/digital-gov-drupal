{#
Include in another template:

{{ include("@digital_gov/partials/featured-link.html.twig", {
  'url' : link destination
  'title': text of link
  'summary': optional summary description
}, with_context = false) }}

#}

{% set logo_source = logo_source ?: '/' ~ active_theme_path() ~ '/static/digitalgov/img/digit-50.png' %}

<li class="usa-collection__item">
  <div class="usa-collection__img-wrapper">
    <img
      class="usa-collection__img"
      src="{{ logo_source }}"
      alt=""
      aria-hidden="true"
    />
  </div>
  <div class="usa-collection__body">
    <h3>
      <a class="usa-link"
         href="{{ url }}" class="usa-collection__header"
         title="{{ title}} ">
        {{ title }}
      </a>
    </h3>

    {% if summary %}
      <p class="usa-collection__description">
        {{ summary }}
      </p>
    {% endif %}
  </div>
</li>
