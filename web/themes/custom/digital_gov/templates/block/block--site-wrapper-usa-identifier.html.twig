<!-- USWDS Identifier component -->
<!-- Data is stored in /data/usa_identifier.yml -->

<div class="usa-identifier">
  <section
      class="usa-identifier__section usa-identifier__section--masthead"
      aria-label="Agency Identifier"
  >
    <div class="usa-identifier__container">
      <div class="usa-identifier__logos">
        <a href={{ parent_agency_link }} class="usa-identifier__logo">
          <img
              class="usa-identifier__logo-img"
              src={{ src }}
              alt="GSA logo"
              role="img"
          />
        </a>
      </div>
      <section
          class="usa-identifier__identity"
          aria-label="Agency description"
      >
        <p class="usa-identifier__identity-domain">{{ site_name}}</p>
        <p class="usa-identifier__identity-disclaimer">
          An official website of the
          <a href={{ parent_link }}>{{ parent_link_title }}</a>
        </p>
      </section>
    </div>
  </section>
  <nav
      class="usa-identifier__section usa-identifier__section--required-links"
      aria-label="Important links"
  >
    <div class="usa-identifier__container">
      <ul class="usa-identifier__required-links-list">
        <!--TODO: put these links into an array and write them out-->
        <li class="usa-identifier__required-links-item">
          <a href={{ about_link }} class="usa-identifier__required-link usa-link">{{ about_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ requests_link }} class="usa-identifier__required-link usa-link">{{ requests_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ office_link }} class="usa-identifier__required-link usa-link">{{ office_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ policy_link }} class="usa-identifier__required-link usa-link">{{ policy_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ statement_link }} class="usa-identifier__required-link usa-link">{{ statement_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ act_link }} class="usa-identifier__required-link usa-link">{{ act_link_title }}</a>
        </li>
        <li class="usa-identifier__required-links-item">
          <a href={{ performance_link }} class="usa-identifier__required-link usa-link">{{ performance_link_title }}</a>
        </li>
      </ul>
    </div>
  </nav>
  <section
      class="usa-identifier__section usa-identifier__section--usagov"
      aria-label="{{ subtext }}"
  >
    <div class="usa-identifier__container">
      <div class="usa-identifier__usagov-description">
        {{ subtext }}
      </div>
      <a href="{{ visit_link }}" class="usa-link">
        {{ visit_link_title }}
      </a>
    </div>
  </section>
</div>
